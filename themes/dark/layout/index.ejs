<% page.posts.each(function(item){ %>
  <!-- <%- partial('_partial/article', {item: item, index: true}) %> -->

  
  <div class="archive">
    
    <article class="<%= item.layout %>">
      <div class="post-content">
        <header>
            <% if (item.link){ %>
              <a href="<%- config.root %><%- item.path %>"><div class="icon"></div></a>
              <% if (item.title){ %>
                <h2 class="title link"><a href="<%- item.link %>" target="_blank"><%= item.title %></a></h2>
              <% } else { %>
                <h2 class="title link"><a href="<%- item.link %>" target="_blank"><%= item.link %></a></h2>
              <% } %>
            <% } else { %>
              <a href="<%- config.root %><%- item.path %>"><div class="icon depth"></div> </a>
              <h2 class="depth title" ><a href="<%- config.root %><%- item.path %>"><%= item.title %></a></h2>
            <% } %>
            <time class="time title depth" datetime="<%= item.date.toDate().toISOString() %>"><a href="<%- config.root %><%- item.path %>"><%= item.date.format(config.date_format) %></a></time>
          </header>
      </div>
    </article>
  </div>
  
<% }); %>

<%- partial('_partial/pagination') %>